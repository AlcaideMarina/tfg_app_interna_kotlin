<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/base_component_billing_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_rounded_red_gray_container"
    android:paddingVertical="@dimen/size16"
    android:paddingHorizontal="32dp"
    android:layout_marginBottom="@dimen/size8" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/billing_date_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Mes  ·  Año"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="16dp"
            android:layout_height="24dp"
            android:contentDescription="Ver factura del mes"
            android:src="@drawable/ic_next_arrow" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
