<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bg_red_gray_secondary_rounded_16_dp"
    android:padding="@dimen/size16"
    android:layout_marginTop="@dimen/size8">

    <LinearLayout
        android:id="@+id/texts_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linear_layout_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/size8"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="ID:"
                    android:textSize="16sp"
                    android:layout_marginEnd="8dp"
                    android:textColor="@color/black_color"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/id_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:text="ID"
                    android:textSize="16sp"
                    android:textColor="@color/black_color" />

            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/divider_1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size1"
                android:background="@color/red_gray_light_secondary_color"
                android:layout_marginEnd="16dp"
                app:layout_constraintTop_toBottomOf="@id/linear_layout_id"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/name_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:text="Nombre"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black_color"
                android:layout_marginTop="8dp"/>

            <LinearLayout
                android:id="@+id/linear_layout_dni"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="DNI:"
                    android:textSize="16sp"
                    android:layout_marginEnd="8dp"
                    android:textColor="@color/black_color"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/dni_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:text="dni"
                    android:textSize="16sp"
                    android:textColor="@color/black_color" />

            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/divider_2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size1"
                android:background="@color/red_gray_light_secondary_color"
                android:layout_marginEnd="16dp"
                app:layout_constraintTop_toBottomOf="@id/linear_layout_dni"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <LinearLayout
                android:id="@+id/linear_layout_role"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Puesto:"
                    android:textSize="16sp"
                    android:layout_marginEnd="8dp"
                    android:textColor="@color/black_color"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/job_role_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:text="puesto"
                    android:textSize="16sp"
                    android:textColor="@color/black_color" />

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/arrow_icon"
            android:layout_width="16dp"
            android:layout_height="24dp"
            android:contentDescription="Ver usuario"
            android:src="@drawable/ic_next_arrow" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
