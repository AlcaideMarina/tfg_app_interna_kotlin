<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginVertical="16dp"
        android:layout_marginHorizontal="8dp" >

        <androidx.cardview.widget.CardView
            android:id="@+id/final_product_control_button"
            android:layout_width="0dp"
            android:layout_height="176dp"
            android:layout_weight="1"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_marginHorizontal="@dimen/size8"
            android:layout_marginVertical="@dimen/size8"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            android:backgroundTint="@color/red_primary_color">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_margin="16dp"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/final_product_control_image_card"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_gravity="center_horizontal"
                    android:contentDescription="ImageView"
                    android:src="@drawable/ic_fpc"
                    app:tint="@color/red_gray_light_secondary_color" />

                <TextView
                    android:id="@+id/final_product_control_title_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Control prod. final"
                    android:textAlignment="center"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/red_gray_light_secondary_color"
                    android:layout_marginTop="24dp"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/farm_situation_monitoring_button"
            android:layout_width="0dp"
            android:layout_height="176dp"
            android:layout_weight="1"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_marginHorizontal="@dimen/size8"
            android:layout_marginVertical="@dimen/size8"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            android:backgroundTint="@color/red_primary_color">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_margin="16dp"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/farm_situation_monitoring_image_card"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_mcs"
                    app:tint="@color/red_gray_light_secondary_color"
                    android:contentDescription="ImageView" />

                <TextView
                    android:id="@+id/farm_situation_monitoring_title_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Seg. situaciÃ³n granja"
                    android:textAlignment="center"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/red_gray_light_secondary_color"
                    android:layout_marginTop="24dp"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
