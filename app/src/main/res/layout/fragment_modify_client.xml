<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <!-- TODO: Arreglar el final del scroll -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/size24"
                android:orientation="vertical"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                    android:id="@+id/company_text_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <TextView
                        android:id="@+id/company_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Empresa:"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="@color/black_color" />

                    <EditText
                        android:id="@+id/company_text_input_layout"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:ems="10"
                        android:inputType="text"
                        android:textSize="16sp"
                        android:background="@drawable/custom_input"
                        android:paddingHorizontal="12dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginHorizontal="@dimen/size16"
                        android:autofillHints="name"
                        android:textColor="@color/black_color"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/direction_text_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="12dp"
                    app:layout_constraintTop_toBottomOf="@id/company_text_layout"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <TextView
                        android:id="@+id/direction_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Dirección:"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="@color/black_color" />

                    <EditText
                        android:id="@+id/direction_text_input_layout"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:ems="10"
                        android:inputType="text"
                        android:textSize="16sp"
                        android:background="@drawable/custom_input"
                        android:paddingHorizontal="12dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginHorizontal="@dimen/size16"
                        android:autofillHints="name"
                        android:textColor="@color/black_color"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/city_text_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="12dp"
                    app:layout_constraintTop_toBottomOf="@id/direction_text_layout"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <TextView
                        android:id="@+id/city_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Ciudad:"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="@color/black_color" />

                    <EditText
                        android:id="@+id/city_text_input_layout"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:ems="10"
                        android:inputType="text"
                        android:textSize="16sp"
                        android:background="@drawable/custom_input"
                        android:paddingHorizontal="12dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginHorizontal="@dimen/size16"
                        android:autofillHints="name"
                        android:textColor="@color/black_color"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/province_text_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="12dp"
                    app:layout_constraintTop_toBottomOf="@id/city_text_layout"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <TextView
                        android:id="@+id/province_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Provincia:"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="@color/black_color" />

                    <EditText
                        android:id="@+id/province_text_input_layout"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:ems="10"
                        android:inputType="text"
                        android:textSize="16sp"
                        android:background="@drawable/custom_input"
                        android:paddingHorizontal="12dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginHorizontal="@dimen/size16"
                        android:autofillHints="name"
                        android:textColor="@color/black_color"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/postal_code_text_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="12dp"
                    app:layout_constraintTop_toBottomOf="@id/province_text_layout"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <TextView
                        android:id="@+id/postal_code_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Código postal:"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="@color/black_color" />

                    <EditText
                        android:id="@+id/postal_code_text_input_layout"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:ems="10"
                        android:inputType="number"
                        android:textSize="16sp"
                        android:background="@drawable/custom_input"
                        android:paddingHorizontal="12dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginHorizontal="@dimen/size16"
                        android:autofillHints="name"
                        android:textColor="@color/black_color"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/cif_text_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="12dp"
                    app:layout_constraintTop_toBottomOf="@id/postal_code_text_layout"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <TextView
                        android:id="@+id/cif_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="CIF:"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="@color/black_color" />

                    <EditText
                        android:id="@+id/cif_text_input_layout"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:ems="10"
                        android:inputType="text"
                        android:textSize="16sp"
                        android:background="@drawable/custom_input"
                        android:paddingHorizontal="12dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginHorizontal="@dimen/size16"
                        android:autofillHints="name"
                        android:textColor="@color/black_color"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/email_text_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="12dp"
                    app:layout_constraintTop_toBottomOf="@id/cif_text_layout"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <TextView
                        android:id="@+id/email_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Correo:"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="@color/black_color" />

                    <EditText
                        android:id="@+id/email_text_input_layout"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:ems="10"
                        android:inputType="textEmailAddress"
                        android:textSize="16sp"
                        android:background="@drawable/custom_input"
                        android:paddingHorizontal="12dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginHorizontal="@dimen/size16"
                        android:autofillHints="email"
                        android:textColor="@color/black_color"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/phone_text_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="12dp"
                    app:layout_constraintTop_toBottomOf="@id/email_text_layout"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <TextView
                        android:id="@+id/phone_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Teléfono:"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="@color/black_color" />

                    <LinearLayout
                        android:id="@+id/phone_text_input_layout_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:baselineAligned="false" >

                        <EditText
                            android:id="@+id/phone_text_input_layout_name_1"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:ems="10"
                            android:inputType="text"
                            android:textSize="16sp"
                            android:background="@drawable/custom_input"
                            android:paddingHorizontal="12dp"
                            android:layout_marginTop="4dp"
                            android:layout_marginEnd="2dp"
                            android:layout_marginStart="16dp"
                            android:autofillHints="name"
                            android:textColor="@color/black_color"/>

                        <EditText
                            android:id="@+id/phone_text_input_layout_phone_1"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:ems="10"
                            android:inputType="phone"
                            android:textSize="16sp"
                            android:background="@drawable/custom_input"
                            android:paddingHorizontal="12dp"
                            android:layout_marginTop="4dp"
                            android:layout_marginStart="2dp"
                            android:layout_marginEnd="16dp"
                            android:autofillHints="phone"
                            android:textColor="@color/black_color"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/phone_text_input_layout_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:baselineAligned="false">

                        <EditText
                            android:id="@+id/phone_text_input_layout_name_2"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:ems="10"
                            android:inputType="text"
                            android:textSize="16sp"
                            android:background="@drawable/custom_input"
                            android:paddingHorizontal="12dp"
                            android:layout_marginTop="4dp"
                            android:layout_marginEnd="2dp"
                            android:layout_marginStart="16dp"
                            android:autofillHints="name"
                            android:textColor="@color/black_color"/>

                        <EditText
                            android:id="@+id/phone_text_input_layout_phone_2"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:ems="10"
                            android:inputType="phone"
                            android:textSize="16sp"
                            android:background="@drawable/custom_input"
                            android:paddingHorizontal="12dp"
                            android:layout_marginTop="4dp"
                            android:layout_marginStart="2dp"
                            android:layout_marginEnd="16dp"
                            android:autofillHints="phone"
                            android:textColor="@color/black_color"/>

                    </LinearLayout>

                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/container_border_check_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    app:layout_constraintTop_toBottomOf="@id/phone_text_layout"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/body_container_recycler_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="15dp"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/bg_border_container_border_check_title" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent">

                            <LinearLayout
                                android:id="@+id/user_account_text_layout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical" >

                                <TextView
                                    android:id="@+id/user_account_text_view"
                                    android:layout_marginTop="@dimen/size8"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:text="Usuario:" />

                                <EditText
                                    android:id="@+id/user_account_text_input_layout"
                                    android:layout_width="match_parent"
                                    android:layout_height="60dp"
                                    android:ems="10"
                                    android:inputType="text"
                                    android:textSize="16sp"
                                    android:background="@drawable/custom_input"
                                    android:paddingHorizontal="12dp"
                                    android:layout_marginTop="@dimen/size24"
                                    android:layout_marginHorizontal="@dimen/size16"
                                    android:autofillHints="username"/>

                            </LinearLayout>

                        </LinearLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <CheckedTextView
                        android:id="@+id/checked_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        android:gravity="center"
                        android:drawableStart="?android:attr/listChoiceIndicatorMultiple"
                        android:text="Crear usuario para la app cliente"
                        android:layout_marginStart="@dimen/size24"
                        android:paddingStart="12dp"
                        android:paddingEnd="16dp"
                        android:background="@color/white_color"/>

                </RelativeLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/buttons_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/size8"
                    android:layout_marginTop="40dp"
                    app:layout_constraintTop_toBottomOf="@id/divider"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/modify_button"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/bg_squared_button_black"
                        android:layout_marginBottom="8dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toTopOf="@id/delete_client_button">

                        <TextView
                            android:id="@+id/modify_button_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/size24"
                            android:textColor="@color/white_color"
                            android:textSize="14dp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:text="Guardar" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/delete_client_button"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/bg_squared_button"
                        android:layout_marginBottom="16dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent">

                        <TextView
                            android:id="@+id/delete_client_button_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/size24"
                            android:textColor="@color/white_color"
                            android:textSize="14dp"
                            android:text="Cancelar"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>

            <ProgressBar
                android:id="@+id/loading_component"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="64dp"
                android:layout_marginBottom="64dp"
                android:elevation="2dp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>