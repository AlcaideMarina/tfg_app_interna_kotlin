<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/size24"
                android:orientation="vertical"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" >

                <LinearLayout
                    android:id="@+id/name_text_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/name_text_view"
                        android:layout_marginTop="@dimen/size8"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Nombre:" />

                    <EditText
                        android:id="@+id/name_text_input_layout"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:ems="10"
                        android:inputType="text"
                        android:textSize="16sp"
                        android:background="@drawable/custom_input"
                        android:paddingHorizontal="12dp"
                        android:layout_marginTop="@dimen/size8"
                        android:layout_marginHorizontal="@dimen/size16"
                        android:autofillHints="name"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/surname_text_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/surname_text_view"
                        android:layout_marginTop="@dimen/size8"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Apellidos:" />

                    <EditText
                        android:id="@+id/surname_text_input_layout"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:ems="10"
                        android:inputType="text"
                        android:textSize="16sp"
                        android:background="@drawable/custom_input"
                        android:paddingHorizontal="12dp"
                        android:layout_marginTop="@dimen/size8"
                        android:layout_marginHorizontal="@dimen/size16"
                        android:autofillHints="name"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/dni_text_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/dni_text_view"
                        android:layout_marginTop="@dimen/size8"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="DNI:" />

                    <EditText
                        android:id="@+id/dni_text_input_layout"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:ems="10"
                        android:inputType="text"
                        android:textSize="16sp"
                        android:background="@drawable/custom_input"
                        android:paddingHorizontal="12dp"
                        android:layout_marginTop="@dimen/size8"
                        android:layout_marginHorizontal="@dimen/size16"
                        android:autofillHints="name"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/phone_text_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/phone_text_view"
                        android:layout_marginTop="@dimen/size8"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Teléfono:" />

                    <EditText
                        android:id="@+id/phone_text_input_layout"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:ems="10"
                        android:inputType="phone"
                        android:textSize="16sp"
                        android:background="@drawable/custom_input"
                        android:paddingHorizontal="12dp"
                        android:layout_marginTop="@dimen/size8"
                        android:layout_marginHorizontal="@dimen/size16"
                        android:autofillHints="phone"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/email_text_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/email_text_view"
                        android:layout_marginTop="@dimen/size8"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Correo:" />

                    <EditText
                        android:id="@+id/email_text_input_layout"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:ems="10"
                        android:inputType="textEmailAddress"
                        android:textSize="16sp"
                        android:background="@drawable/custom_input"
                        android:paddingHorizontal="12dp"
                        android:layout_marginTop="@dimen/size8"
                        android:layout_marginHorizontal="@dimen/size16"
                        android:autofillHints="emailAddress"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/direction_text_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/direction_text_view"
                        android:layout_marginTop="@dimen/size8"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Dirección:" />

                    <EditText
                        android:id="@+id/direction_text_input_layout"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:ems="10"
                        android:inputType="text"
                        android:textSize="16sp"
                        android:background="@drawable/custom_input"
                        android:paddingHorizontal="12dp"
                        android:layout_marginTop="@dimen/size8"
                        android:layout_marginHorizontal="@dimen/size16"
                        android:autofillHints="name"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/city_text_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/city_text_view"
                        android:layout_marginTop="@dimen/size8"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Ciudad:" />

                    <EditText
                        android:id="@+id/city_text_input_layout"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:ems="10"
                        android:inputType="text"
                        android:textSize="16sp"
                        android:background="@drawable/custom_input"
                        android:paddingHorizontal="12dp"
                        android:layout_marginTop="@dimen/size8"
                        android:layout_marginHorizontal="@dimen/size16"
                        android:autofillHints="name"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/province_text_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/province_text_view"
                        android:layout_marginTop="@dimen/size8"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Provincia:" />

                    <EditText
                        android:id="@+id/province_text_input_layout"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:ems="10"
                        android:inputType="phone"
                        android:textSize="16sp"
                        android:background="@drawable/custom_input"
                        android:paddingHorizontal="12dp"
                        android:layout_marginTop="@dimen/size8"
                        android:layout_marginHorizontal="@dimen/size16"
                        android:autofillHints="phone"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/postal_code_text_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/postal_code_text_view"
                        android:layout_marginTop="@dimen/size8"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Código postal:" />

                    <EditText
                        android:id="@+id/postal_code_text_input_layout"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:ems="10"
                        android:inputType="number"
                        android:textSize="16sp"
                        android:background="@drawable/custom_input"
                        android:paddingHorizontal="12dp"
                        android:layout_marginTop="@dimen/size8"
                        android:layout_marginHorizontal="@dimen/size16"
                        android:autofillHints="postalCode"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ss_number_text_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/ss_number_text_view"
                        android:layout_marginTop="@dimen/size8"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Nº Afiliación de la Seguridad Social:" />

                    <EditText
                        android:id="@+id/ss_number_text_input_layout"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:ems="10"
                        android:inputType="number"
                        android:textSize="16sp"
                        android:background="@drawable/custom_input"
                        android:paddingHorizontal="12dp"
                        android:layout_marginTop="@dimen/size8"
                        android:layout_marginHorizontal="@dimen/size16"
                        android:autofillHints="phone"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/bank_account_text_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/bank_account_text_view"
                        android:layout_marginTop="@dimen/size8"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Cuenta bancaria:" />

                    <EditText
                        android:id="@+id/bank_account_text_input_layout"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:ems="10"
                        android:inputType="number"
                        android:textSize="16sp"
                        android:background="@drawable/custom_input"
                        android:paddingHorizontal="12dp"
                        android:layout_marginTop="@dimen/size8"
                        android:layout_marginHorizontal="@dimen/size16"
                        android:autofillHints="phone"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/role_text_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/role_text_view"
                        android:layout_marginTop="@dimen/size8"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Puesto:" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/text_input_layout"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:hint="-"
                        android:textColorHint="@color/light_gray_color"
                        android:background="@drawable/custom_input"
                        android:paddingHorizontal="12dp"
                        android:layout_marginTop="@dimen/size8"
                        android:layout_marginHorizontal="@dimen/size16"
                        app:boxCornerRadiusBottomEnd="@dimen/size16"
                        app:boxCornerRadiusBottomStart="@dimen/size16"
                        app:boxCornerRadiusTopEnd="@dimen/size16"
                        app:boxCornerRadiusTopStart="@dimen/size16"
                        app:boxStrokeColor="@color/light_gray_color"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu" >

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/container_border_check_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginVertical="32dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/body_container_recycler_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="15dp"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/bg_border_container_border_check_title" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent">

                            <LinearLayout
                                android:id="@+id/user_account_text_layout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical" >

                                <TextView
                                    android:id="@+id/user_account_text_view"
                                    android:layout_marginTop="@dimen/size8"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:text="Usuario:" />

                                <EditText
                                    android:id="@+id/user_account_text_input_layout"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:ems="10"
                                    android:inputType="text"
                                    android:textSize="16sp"
                                    android:background="@drawable/custom_input"
                                    android:paddingHorizontal="12dp"
                                    android:layout_marginTop="@dimen/size8"
                                    android:layout_marginHorizontal="@dimen/size16"
                                    android:autofillHints="username"/>

                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="El usuario debe tener más de 6 dígitos."
                                android:layout_marginTop="@dimen/size16"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="La contraseña será igual que el usuario. Por favor, cámbiela en cuanto sea posible. Para hacer login, se necesitará el correo y la contraseña."
                                android:layout_marginBottom="4dp"/>

                        </LinearLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <CheckedTextView
                        android:id="@+id/checked_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        android:gravity="center"
                        android:drawableStart="?android:attr/listChoiceIndicatorMultiple"
                        android:text="Crear usuario para la app cliente"
                        android:layout_marginStart="@dimen/size24"
                        android:paddingStart="12dp"
                        android:paddingEnd="16dp"
                        android:background="@color/white_color"/>

                </RelativeLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/buttons_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/size16">

                    <com.example.hueverianieto.ui.components.HNButton
                        android:id="@+id/save_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.example.hueverianieto.ui.components.HNButton
                        android:id="@+id/cancel_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/size8"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/save_button" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>

            <ProgressBar
                android:id="@+id/loading_component"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="64dp"
                android:layout_marginBottom="64dp"
                android:elevation="2dp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>